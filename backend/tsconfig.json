{
    "compilerOptions": {
      "rootDirs": ["src"],
      "outDir": "dist",
      "lib": ["es2020"],
      "target": "es2020",
      "module": "ESNext",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "allowJs": true,
      "checkJs": true,
      "strict": true,
      "noUnusedParameters": true,
      "noEmit": true,
      "allowImportingTsExtensions": true,
      "types": ["node"]
    },
    "ts-node": {
      "esm": true
    },
  }